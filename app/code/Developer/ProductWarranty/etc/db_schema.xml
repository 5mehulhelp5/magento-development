<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="product_warranty" resource="default" engine="innodb" comment="Product Warranty Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" comment="Product ID"/>
        <column xsi:type="int" name="warranty" unsigned="true" nullable="true" comment="Warranty in months"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>

        <constraint xsi:type="foreign" referenceId="PRODUCT_WARRANTY_PRODUCT_ID_PRODUCT_WARRANTY"
                    table="product_warranty" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>

        <index referenceId="PRODUCT_WARRANTY_PRODUCT_ID_INDEX" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>
</schema>
